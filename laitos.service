[Unit]
Description=laitos - personal Internet infrastructure
After=network.target

[Service]
ExecStart=/laitos/laitos -conflictfree -config config.json -frontend dnsd,healthcheck,httpd,lighthttpd,smtpd,sockd,telegram
User=root
Group=root
WorkingDirectory=/laitos
PrivateTmp=true
RestartSec=3600
Restart=always

[Install]
WantedBy=multi-user.target
