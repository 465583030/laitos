[Unit]
Description=laitos Internet infrastructure
After=network.target

[Service]
ExecStart=/usr/sbin/laitos -config config.json -frontend dnsd,healthcheck,httpd,httpd80,smtpd,sockd,telegram
User=root
Group=root
WorkingDirectory=/tmp
PrivateTmp=true
RestartSec=3
Restart=always

[Install]
WantedBy=multi-user.target
